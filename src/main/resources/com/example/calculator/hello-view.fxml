<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="106.0" prefWidth="154.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.calculator.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="first_input" />
            <TextField fx:id="second_input" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#Onplus" text="+" />
            <Button mnemonicParsing="false" onAction="#Onminus" text="-" />
            <Button mnemonicParsing="false" onAction="#Onmultiply" text="*" />
            <Button mnemonicParsing="false" onAction="#Ondivide" text="/" />
            <Button mnemonicParsing="false" onAction="#Onpercentage" text="\%" />
         </children>
      </HBox>
      <Label fx:id="number" />
      <HBox prefHeight="100.0" prefWidth="200.0" />
   </children>
</VBox>
